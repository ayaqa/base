{
    "builders": [
        {
            "type": "docker",
            "image": "{{ user `AYAQA_PROJECT_BI` }}:{{ user `AYAQA_PROJECT_BIT` }}",
            "commit": "true",
            "changes": [
                "USER root",
                "ENV DEBIAN_FRONTEND noninteractive",
                "ENV TERM xterm",
                "ENV AYAQA_HOSTNAME {{ user `AYAQA_PROJECT_NAME` }}",
                "ENV AYAQA_BUILD_STAGE {{ user `AYAQA_PROJECT_BUILD_STAGE` }}",
                "ENV AYAQA_APP_ENV {{ user `AYAQA_APP_ENV` }}",
                "ENV AYAQA_DEBUG {{ user `AYAQA_PROJECT_DEBUG` }}",
                "ENV AYAQA_APP_DEBUG {{ user `AYAQA_APP_DEBUG` }}",

                "ENV AYAQA_INFRA_DIR {{ user `AYAQA_INFRA_DIR` }}",
                "ENV AYAQA_INFRA_LIBS_DIR {{ user `AYAQA_INFRA_LIBS_DIR` }}",

                "ENV AYAQA_CONFIG_DIR {{ user `AYAQA_CONFIG_DIR` }}",
                "ENV AYAQA_BOOT_CONFIG_DIR {{ user `AYAQA_BOOT_CONFIG_DIR` }}",
                "ENV AYAQA_IMAGE_BOOT_SETUP_FILE_PATH {{ user `AYAQA_IMAGE_BOOT_SETUP_FILE_PATH` }}",

                "VOLUME {{ user `AYAQA_BOOT_CONFIG_DIR` }}",
                "ENTRYPOINT {{ user `AYAQA_IMAGE_ENTRYPOINT_FILE_PATH` }}"
            ]
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "inline": [
                "DEBIAN_FRONTEND='noninteractive'",
                "apt-get -y update",
                "apt-get install -y gnupg2",
                "echo 'deb http://ppa.launchpad.net/ansible/ansible/ubuntu trusty main' >> /etc/apt/sources.list",
                "apt-key adv --keyserver keyserver.ubuntu.com --recv-keys 93C4A3FD7BB9C367",
                "apt-get -y update",
                "apt-get -y install ansible"
            ]
        },
        {
            "type": "shell",
            "inline": [
                "mkdir --parents {{ user `AYAQA_INFRA_DIR` }}",
                "mkdir --parents {{ user `AYAQA_INFRA_SCRIPTS_DIR` }}",
                "mkdir --parents {{ user `AYAQA_INFRA_PROVISION_DIR` }}",
                "mkdir --parents {{ user `AYAQA_INFRA_LIBS_DIR` }}",
                "mkdir --parents {{ user `AYAQA_INFRA_PROVISION_SHARED_DIR` }}"
            ]
        },
        {
            "type": "file",
            "source": "{{ user `SHARED_LIBS_DIR` }}",
            "destination": "{{ user `AYAQA_INFRA_LIBS_DIR` }}"
        },
        {
            "type": "file",
            "source": "{{ user `BUILD_DIR`}}/provision/",
            "destination": "{{ user `AYAQA_PROVISION_IMAGE_DIR` }}"
        },
        {
            "type": "file",
            "source": "{{user `BUILD_DIR` }}/scripts/",
            "destination": "{{ user `AYAQA_INFRA_SCRIPTS_DIR` }}"
        },
        {
            "type": "shell",
            "inline": [
                "chmod 700 {{ user `AYAQA_PROVISION_BASH_SCRIPT_PATH` }}",
                "{{ user `AYAQA_PROVISION_BASH_SCRIPT_PATH` }}"
            ],
            "environment_vars": [
                "AYAQA_INFRA_LIBS_DIR={{ user `AYAQA_INFRA_LIBS_DIR` }}",
                "AYAQA_PROVISION_IMAGE_DIR={{ user `AYAQA_PROVISION_IMAGE_DIR` }}"
            ]
        }
    ],
    "post-processors": [
        {
            "type": "docker-tag",
            "repository": "{{ user `AYAQA_PROJECT_NAME` }}",
            "tag": "{{ user `AYAQA_PROJECT_TAG` }}"
        }
    ]
}