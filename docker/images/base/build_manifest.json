{
    "builders": [
        {
            "type": "docker",
            "image": "{{ user `AYAQA_PROJECT_BI` }}:{{ user `AYAQA_PROJECT_BIT` }}",
            "commit": "true",
            "changes": [
                "USER root",
                "ENV DEBIAN_FRONTEND noninteractive",
                "ENV TERM xterm",
                "ENV AYAQA_HOSTNAME {{ user `AYAQA_PROJECT_NAME` }}",
                "ENV AYAQA_BUILD_STAGE {{ user `AYAQA_PROJECT_BUILD_STAGE` }}",
                "ENV AYAQA_APP_ENV {{ user `AYAQA_APP_ENV` }}",
                "ENV AYAQA_DEBUG {{ user `AYAQA_PROJECT_DEBUG` }}",
                "ENV AYAQA_APP_DEBUG {{ user `AYAQA_APP_DEBUG` }}",

                "ENV AYAQA_INFRA_DIR {{ user `AYAQA_INFRA_DIR` }}",

                "ENV AYAQA_CONFIG_DIR {{ user `AYAQA_CONFIG_DIR` }}",
                "ENV AYAQA_BOOT_CONFIG_DIR {{ user `AYAQA_BOOT_CONFIG_DIR` }}",
                "ENV AYAQA_IMAGE_BOOT_SETUP_FILE_PATH {{ user `AYAQA_IMAGE_BOOT_SETUP_FILE_PATH` }}",

                "VOLUME {{ user `AYAQA_BOOT_CONFIG_DIR` }}",
                "ENTRYPOINT {{ user `AYAQA_IMAGE_ENTRYPOINT_FILE_PATH` }}"
            ]
        }
    ],
    "post-processors": [
        {
            "type": "docker-tag",
            "repository": "{{ user `AYAQA_PROJECT_NAME` }}",
            "tag": "{{ user `AYAQA_PROJECT_TAG` }}"
        }
    ]
}