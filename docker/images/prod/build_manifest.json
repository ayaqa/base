{
    "builders": [
        {
            "type": "docker",
            "image": "{{ user `AYAQA_PROJECT_BI` }}:{{ user `AYAQA_PROJECT_BIT` }}",
            "commit": true,
            "pull": false,
            "changes": [
                "USER root",
                "ENV DEBIAN_FRONTEND noninteractive",

                "ENTRYPOINT {{ user `AYAQA_IMAGE_ENTRYPOINT_FILE_PATH` }}"
            ]
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "inline": [
                "mkdir --parents {{ user `AYAQA_APP_ROOT_DIR` }}"
            ]
        },
        {
            "type": "file",
            "source": "{{ user `BUILD_DIR`}}/provision/",
            "destination": "{{ user `AYAQA_PROVISION_IMAGE_DIR` }}"
        },
        {
            "type": "file",
            "source": "{{user `BUILD_DIR` }}/scripts/",
            "destination": "{{ user `AYAQA_INFRA_SCRIPTS_DIR` }}"
        },
        {
            "type": "shell",
            "inline": [
                "chmod 700 {{ user `AYAQA_PROVISION_BASH_SCRIPT_PATH` }}",
                "{{ user `AYAQA_PROVISION_BASH_SCRIPT_PATH` }}"
            ],
            "environment_vars": [
                "AYAQA_PROVISION_IMAGE_DIR={{ user `AYAQA_PROVISION_IMAGE_DIR` }}",
                "AYAQA_INFRA_LIBS_DIR={{ user `AYAQA_INFRA_LIBS_DIR` }}"
            ]
        }
    ],
    "post-processors": [
        {
            "type": "docker-tag",
            "repository": "{{ user `AYAQA_PROJECT_NAME` }}",
            "tag": "{{ user `AYAQA_PROJECT_TAG` }}"
        }
    ]
}